<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg">

    <ImageView
        android:id="@+id/holder_char_details_img"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/drawer_bg_marvel" />

    <View
        android:id="@+id/gradient_bg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/home_transparent_bg"
        app:layout_constraintBottom_toBottomOf="@id/holder_char_details_img"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/holder_char_details_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/gradient_bg"
        app:layout_constraintTop_toTopOf="@id/gradient_bg"
        tools:text="Thor" />

    <TextView
        android:id="@+id/holder_char_details_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_10"
        android:paddingEnd="@dimen/padding_10"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/holder_char_details_title" />


</androidx.constraintlayout.widget.ConstraintLayout>