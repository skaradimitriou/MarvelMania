<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation.xml"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.stathis.marvelmania.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_details"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_search"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_comics"
            app:destination="@id/comicsFragment" />
        <action
            android:id="@+id/action_events"
            app:destination="@id/eventsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_storiesFragment"
            app:destination="@id/storiesFragment" />
        <action
            android:id="@+id/comicDetails"
            app:destination="@id/comicResultsFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.stathis.marvelmania.ui.details.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >

        <argument
            android:name="character"
            app:argType="com.stathis.marvelmania.models.characters.MarvelCharacter" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.stathis.marvelmania.ui.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_details"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/comicsFragment"
        android:name="com.stathis.marvelmania.ui.comics.ComicsFragment"
        android:label="fragment_comics"
        tools:layout="@layout/fragment_comics" />

    <fragment
        android:id="@+id/eventsFragment"
        android:name="com.stathis.marvelmania.ui.events.EventsFragment"
        android:label="fragment_events"
        tools:layout="@layout/fragment_events" />
    <fragment
        android:id="@+id/storiesFragment"
        android:name="com.stathis.marvelmania.ui.stories.StoriesFragment"
        android:label="fragment_stories"
        tools:layout="@layout/fragment_stories" />
    <fragment
        android:id="@+id/comicResultsFragment"
        android:name="com.stathis.marvelmania.ui.comicDetails.ComicResultsFragment"
        android:label="fragment_comic_results"
        tools:layout="@layout/fragment_comic_results" >
        <argument
            android:name="comic"
            app:argType="com.stathis.marvelmania.models.comics.Comic" />
    </fragment>

</navigation>