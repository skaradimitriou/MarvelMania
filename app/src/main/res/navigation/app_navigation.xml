<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation.xml"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.stathis.marvelmania.features.dashboard.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home"></fragment>

    <fragment
        android:id="@+id/nav_search"
        android:name="com.stathis.marvelmania.features.dashboard.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
    </fragment>

    <fragment
        android:id="@+id/comicsFragment"
        android:name="com.stathis.marvelmania.features.comics.ComicsFragment"
        android:label="fragment_comics"
        tools:layout="@layout/fragment_comics" />

    <fragment
        android:id="@+id/eventsFragment"
        android:name="com.stathis.marvelmania.features.events.EventsFragment"
        android:label="fragment_events"
        tools:layout="@layout/fragment_events" />
    <fragment
        android:id="@+id/storiesFragment"
        android:name="com.stathis.marvelmania.features.stories.StoriesFragment"
        android:label="fragment_stories"
        tools:layout="@layout/fragment_stories" />
    <fragment
        android:id="@+id/comicResultsFragment"
        android:name="com.stathis.marvelmania.features.comicDetails.ComicResultsFragment"
        android:label="fragment_comic_results"
        tools:layout="@layout/fragment_comic_results" >
        <argument
            android:name="comic"
            app:argType="com.stathis.marvelmania.models.comics.Comic" />
    </fragment>

</navigation>